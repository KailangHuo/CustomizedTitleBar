<Window x:Class="CustomizedTitleBar.MainWindow"
        x:Name="TheWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CustomizedTitleBar"
        mc:Ignorable="d"
        Title="MainWIndow" Height="450" Width="800"
        Background="Gray">
    <Grid>
        <local:CustomizedTitileBar_UserControl VerticalAlignment="Top"
                                               HostWindow="{Binding ElementName=TheWindow}"
                                               Margin="0"
                                               Background="Black"
                                               Foreground="Azure"
                                               BorderBrush="white"
                                               Height="40"
                                               ButtonWidth="45"
                                               BorderThickness="1"/>
        
        <Button VerticalAlignment="Bottom" Height="50"></Button>
    </Grid>
</Window>
